@model TerminalTransporte.Models.Empleado

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutEmpleados.cshtml";
}

<h2>Detalle</h2>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cedula 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cedula_Empleado)
        </dd>
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_Empleado)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email_empleado)
        </dd>

        <dt>
          Contraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password_Empleado)
        </dd>

        <dt>
           Fecha ingreso 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_Empleado)
        </dd>
        <dt>
           Telefono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono_Empleado)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion_Empleado)
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            Nombre Empresa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa.Nombre_Empresa)
        </dd>

        <dt>
           Cargo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rol.nombre)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(" ", "Edit", new { id = Model.id_Empleado }, new { @class = "glyphicon glyphicon-pencil" })|
    @Html.ActionLink(" ", "Index", new { id = Model.id_Empleado}, new { @class = "glyphicon glyphicon-share-alt" })
</p>
