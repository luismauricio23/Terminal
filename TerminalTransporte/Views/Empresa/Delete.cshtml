@model TerminalTransporte.Models.Empresa

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutEmpleados.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Esta seguro que quiere eliminar este Empresa?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nit_Empresa)
        </dd>
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_Empresa)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion_Empresa)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Correo_Empresa)
        </dd>

        <dt>
            Telefono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono_Empresa)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |


    <a href="@Url.Action("Index", "Empresa")" class="btn btn-primary">
        <i class="icon-pencil icon-white"></i>
        <span>
            <strong>Regresar</strong>
        </span>
    </a>
</div>
}
</div>
