@model IEnumerable<TerminalTransporte.Models.Reserva>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpleados.cshtml";
}

<br />
<br />

<p>
    <a href="@Url.Action("Create2", "Reserva")" class="btn btn-primary">
        <i class="icon-pencil icon-white"></i>
        <span>
            <strong>Crear Reserva</strong>
        </span>
    </a>
</p>
<table class="table">
    <tr>

        <th>
            Numero
        </th>
        <th>
            Fecha
        </th>
        <th>
            Ciudad Origen
        </th>
        <th>
            Ciudad Destino
        </th>
        <th>
            Nombre cliente
        </th>
        <th>
            Nombre Empresa
        </th>
        <th>
            Cantidad Tiquetes
        </th>
        <th>
            total a pagar
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Reserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_Reserva)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Ciudad.Nombre_ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad1.Nombre_ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Nombre_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantida_tiquetes_Reserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_pagar_Reserva)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id_Reserva }, new { @class = "glyphicon glyphicon-pencil" })|
                @Html.ActionLink(" ", "Details", new { id = item.Id_Reserva }, new { @class = "glyphicon glyphicon-plus" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id_Reserva }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
