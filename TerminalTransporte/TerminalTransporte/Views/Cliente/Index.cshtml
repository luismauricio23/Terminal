@model IEnumerable<TerminalTransporte.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpleados.cshtml";
}

<br />
<br />

<p>

    <a href="@Url.Action("Create2", "Cliente")" class="btn btn-primary">
        <i class="icon-pencil icon-white"></i>
        <span>
            <strong>Crear Cliente</strong>
        </span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Cedula
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Telefono
        </th>
        <th>
            Corrio
        </th>
        <th>
            Edad
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Cedula_Cliente)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Cliente)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Apellido_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>

                @Html.ActionLink(" ", "Edit", new { id = item.Cedula_Cliente }, new { @class = "glyphicon glyphicon-pencil" })|
                @Html.ActionLink(" ", "Details", new { id = item.Cedula_Cliente }, new { @class = "glyphicon glyphicon-plus" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Cedula_Cliente }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
