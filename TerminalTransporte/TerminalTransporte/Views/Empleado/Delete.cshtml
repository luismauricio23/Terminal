@model TerminalTransporte.Models.Empleado

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutEmpleados.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Esta seguro que quiere eliminar este Empleado?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cedula
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cedula_Empleado)
        </dd>
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_Empleado)
        </dd>

        <dt>
            Correo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email_empleado)
        </dd>

        <dt>
            Contraseña
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password_Empleado)
        </dd>

        <dt>
            Fecha
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_Empleado)
        </dd>



        <dt>
            Telefono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono_Empleado)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion_Empleado)
        </dd>

        <dt>
            Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            Nombre Empresa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa.Nombre_Empresa)
        </dd>

        <dt>
            Cargo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rol.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |


            <a href="@Url.Action("Index", "Empleado")" class="btn btn-primary">
                <i class="icon-pencil icon-white"></i>
                <span>
                    <strong>Regresar</strong>
                </span>
            </a>
        </div>

    }
    </div>
   