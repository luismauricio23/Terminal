@model IEnumerable<TerminalTransporte.Models.Empresa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpleados.cshtml";
}

<br />
<br />

<p>
    <a href="@Url.Action("Create", "Empresa")" class="btn btn-primary">
        <i class="icon-pencil icon-white"></i>
        <span>
            <strong>Crear Empresa</strong>
        </span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            Nit
        </th>
        <th>
            Nombre
        </th>
        <th>
            Direccion
        </th>
        <th>
            Correo
        </th>
        <th>
            Telefono
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nit_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo_Empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Empresa)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Nit_Empresa }, new { @class = "glyphicon glyphicon-pencil" })|
                @Html.ActionLink(" ", "Details", new { id = item.Nit_Empresa }, new { @class = "glyphicon glyphicon-plus" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Nit_Empresa }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
